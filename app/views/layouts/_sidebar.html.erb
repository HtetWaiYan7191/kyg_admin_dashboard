<!--Main Navigation-->
<header>
  <!-- Sidebar -->
  <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
    <div class="position-sticky">
      <div class="list-group list-group-flush mx-3 mt-4 ">

        <%= link_to "/", class: "list-group-item list-group-item-action py-2 ripple #{dashboard_active}", "aria-current": true do %>
            <i class="fas fa-tachometer-alt fa-fw me-3"></i>
            <span>Dashboard</span>
        <% end %>

        <%= link_to blogs_path, class:"list-group-item list-group-item-action py-2 ripple #{blog_active}" do %>
            <i class="fas fa-chart-area fa-fw me-3"></i><span>Blogs</span>
        <% end %>

        <%= link_to users_path, class: "#{account_active} list-group-item list-group-item-action py-2 ripple " do %>
            <i class="fas fa-lock fa-fw me-3"></i><span>Accounts</span>
        <% end %>

        <%= link_to testimonials_path, class: "#{testimonial_active} list-group-item list-group-item-action py-2 ripple" do %>
          <i class="fas fa-chart-line fa-fw me-3"></i><span>Testimonials</span>
        <% end %>

        <%= link_to contacts_path, class: "#{contact_active}  list-group-item list-group-item-action py-2 ripple" do %>
          <i class="fas fa-chart-pie fa-fw me-3"></i><span>Contact</span>
        <% end %>
        
        <%= link_to categories_path, class: "#{category_active} list-group-item list-group-item-action py-2 ripple" do %>
            <i class="fas fa-chart-bar fa-fw me-3"></i><span>Category</span>
        <% end %>
          

      </div>
    </div>
  </nav>
  <!-- Sidebar -->

  <!-- Navbar -->
  <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
    <!-- Container wrapper -->
    <div class="d-flex flex-row justify-content-between w-full container">
      <!-- Toggle button -->
      <button
        class="navbar-toggler"
        type="button"
        data-mdb-collapse-init
        data-mdb-target="#sidebarMenu"
        aria-controls="sidebarMenu"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <i class="fas fa-bars"></i>
      </button>

      <!-- Brand -->
      <a class="navbar-brand" href="#">
        <img
          src="https://mdbcdn.b-cdn.net/img/logo/mdb-transaprent-noshadows.webp"
          height="25"
          alt="MDB Logo"
          loading="lazy"
        />
      </a>
      <!-- Search form -->
      <form class="d-none d-md-flex input-group w-auto my-auto">
        <input
          autocomplete="off"
          type="search"
          class="form-control rounded"
          placeholder='Search (ctrl + "/" to focus)'
          style="min-width: 225px;"
        />
        <span class="input-group-text border-0"><i class="fas fa-search"></i></span>
      </form>

      <!-- Right links -->
      <% if user_signed_in? %>
      <ul class="navbar-nav ms-auto d-flex flex-row me-32">
        <!-- Avatar -->
        <li class="">
            <div class="dropdown  d-flex align-items-center">
              <button class=" px-4 py-2 rounded btn btn-secondary  mx-5 dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                               <img
                src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img (31).webp"
                class="rounded-circle"
                height="22"
                alt="Avatar"
                loading="lazy"
              />
              </button>
              <ul class="dropdown-menu dropdown-menu">
                <li><%= link_to current_user.name, users_path , class: 'dropdown-item bg-primary text-white' %></li>
                <li><a class="dropdown-item" href="#">Another action</a></li>
                <li><a class="dropdown-item" href="#">Something else here</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= button_to "Logout", destroy_user_session_path, class: 'dropdown-item', method: :delete %></li>
              </ul>
            </div>
        </li>
      </ul>
      <% end %>
    </div>
    <!-- Container wrapper -->
  </nav>
  <!-- Navbar -->
</header>
<!--Main Navigation-->

<!--Main layout-->
<%= render 'layouts/application_layout' do %>
    <%= render 'shared/noti' %>
    <%= yield %>
<% end %>
<!--Main layout-->