<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Department</th>
      <th>Position</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
      <% locals[:users].each do |user| %>
        <tr>
          <td >
            <div class="d-flex align-items-center">
              <img
                  src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                  alt=""
                  style="width: 45px; height: 45px"
                  class="rounded-circle"
                  />
              <div class="ms-3">
                <p class="fw-bold mb-1"><%= user.name %> </p>
                <p class="text-muted mb-0"><%= user.email %> </p>
              </div>
            </div>
          </td>
          <td>
            <p class="fw-normal mb-1 text-truncate table-title"><%= user.title %></p>
            <p class="text-muted mb-0"><%= user.role %> </p>

          </td>
          <td>
            <p class="fw-normal mb-1"><%= user.department %></p>
          </td>
          <td><%= user.position %></td>
          <td class="">
                <%= link_to user_path(user) do  %>
                  <i class="bi bi-eye-fill" style="font-size: 1.2rem"></i>           
                <% end %>
          <% if current_user.admin? %>
                <%= link_to 'Edit', edit_user_path(id: user.id), class: 'btn btn-link btn-sm btn-rounded' %>
                <%#= link_to 'Create', new_user_path, class: ' btn btn-link btn-sm btn-rouned' %>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteUserModalLabel<%= user.id %>" data-bs-target="#deleteUserModal<%= user.id %>">
                    Delete
                </button>
                <!-- Modal -->
              <div class="modal fade" id="deleteUserModal<%= user.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteUserModalLabel<%= user.id %>" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body text-center fw-semibold">
                        Are you sure you want to delete this user ? 
                      </div>
                      <div class="modal-footer">
                        <%= button_to "Delete", user_path(user), { class: 'btn btn-danger', method: :delete } %>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>  
          <% end %>

          </td>
        </tr>
      <% end %>
  </tbody>
</table>
<%= render 'shared/paginate_footer', locals: {items: @users} %>

