<section class="banner-section" style="height: 70vh;">
    <div id="carouselExampleAutoplaying" class="carousel slide h-100 w-100 " data-bs-ride="carousel">
        <div class="carousel-inner h-100">
            <% banners&.each do |banner| %>
                <div class="carousel-item active h-100 ">
                    <%= image_tag banner.image, class: 'd-block w-100 img-fluid h-100 object-fit-cover', alt: "banner #{banner.caption}"%>
                </div> 
            <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class=" bi bi-arrow-left h-2 carousel-arrow " aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
            <span class=" bi bi-arrow-right h-2 carousel-arrow " aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>