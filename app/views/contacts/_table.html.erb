<% if @contacts.present? %>
<table class="table align-middle mb-0 bg-white mt-4">
  <thead class="bg-light">
    <tr>
      <th>Student Name</th>
      <th>Parent Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
      <% @contacts&.each do |contact| %>
        <tr>
          <td>
            <div class="d-flex align-items-center">
              <div class="ms-3">
                <p class="fw-bold mb-1"><%= contact.student_name %></p>
                <p class="text-muted mb-0"><%= (Date.today - contact.birth_date).to_i / 365 %> years old</p>
              </div>
            </div>
          </td>
          <td>
            <p class="fw-normal mb-1"><%= contact.parent_name %></p>
          </td>
          <td>
            <span class=" d-inline"><%= contact.email %></span>
          </td>
          <td><%= contact.phone_number %></td>
          <td>
            <%= link_to contact_path(contact) do  %>
                <i class="bi bi-eye-fill h-3 me-4" style="font-size: 1.2rem"></i>           
            <% end %>
             <% if current_user.admin? %>
                <%#= link_to 'Create', new_user_path, class: ' btn btn-link btn-sm btn-rouned' %>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteContactModalLabel<%= contact.id %>" data-bs-target="#deleteContactModal<%= contact.id %>">
                    Delete
                </button>
                <!-- Modal -->
              <div class="modal fade" id="deleteContactModal<%= contact.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteContactModalLabel<%= contact.id %>" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body text-center fw-semibold">
                        Are you sure you want to delete this contact ? 
                      </div>
                      <div class="modal-footer">
                        <%= button_to "Delete", contact_path(contact), { class: 'btn btn-danger', method: :delete } %>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>
          <% end %>
          </td>
        </tr>
      <% end %>
  </tbody>
</table>
<%= render 'shared/paginate_footer', locals: {items: @contacts} %>

<% else %>
  <%= render 'shared/no_data' %>
<% end %>