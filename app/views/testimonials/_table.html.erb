<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>Speech</th>
      <th>Batch Year</th>
      <th>Year Group</th>
       <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @testimonials&.each do |testimonial| %>
        <tr>
            <td>
                <div class="d-flex align-items-center">
                <% if testimonial.image.present? %>
                    <%= image_tag testimonial.image, alt: 'testimonial', width: 45, height: 45, class: 'rounded-circle'%>
                <% end %>
                <div class="ms-3">
                    <p class="fw-bold mb-1"><%= testimonial.name %></p>
                </div>
                </div>
            </td>
            <td>
                <p class="fw-normal mb-1"><%= testimonial.speech %></p>
            </td>
            <td>
                <span class="badge badge-success rounded-pill d-inline"><%= testimonial.batch_year || '2020-04-04' %></span>
            </td>
            <td><%= testimonial.current_year_group || '' %></td>
            <td class="">
                <%= link_to testimonial_path(testimonial) do  %>
                    <i class="bi bi-eye-fill" style="font-size: 1.2rem"></i>           
                <% end %>
            <% if current_user.admin? %>
                    <%= link_to 'Edit', edit_testimonial_path(id: testimonial.id), class: 'btn btn-link btn-sm btn-rounded' %>
                    <%#= link_to 'Create', new_user_path, class: ' btn btn-link btn-sm btn-rouned' %>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="testimonialModelLabel<%= testimonial.id %>" data-bs-target="#testimonialModel<%= testimonial.id %>">
                        Delete
                    </button>
                    <!-- Modal -->
                <div class="modal fade" id="testimonialModel<%= testimonial.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="testimonialModelLabel<%= testimonial.id %>" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center fw-semibold">
                            Are you sure you want to delete this testimonial ? <%= testimonial.id %>
                        </div>
                        <div class="modal-footer">
                            <%= button_to "Delete", testimonial_path(testimonial), { class: 'btn btn-danger', method: :delete } %>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                        </div>
                    </div>
                    </div>
                <% else %>
                    <%= link_to user_path(user) do  %>
                        <i class="bi bi-eye-fill h-3"></i>           
                    <% end %>
            <% end %>

            </td>
        </tr>
  <% end %>

  </tbody>
</table>
<div class="paginate-box mt-4">
    <%= paginate @testimonials %>
</div>
