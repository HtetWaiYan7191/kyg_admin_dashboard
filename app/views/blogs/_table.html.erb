<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Blog Status</th>
      <th>Views Count</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
      <% locals[:blogs].each do |blog| %>
        <tr>
          <td >
            <div class="d-flex align-items-center">
              <%= image_tag url_for(blog.images.first), size: '45x45', class:'rounded-circle'%>
              <div class="ms-3">
                <p class="fw-bold mb-1"><%= blog.category.name %> </p>

              </div>
            </div>
          </td>
          <td>
            <p class="fw-normal mb-1"><%= blog.title %></p>

          </td>
          <td>
            <p class="fw-normal mb-1 badge badge-success rounded-pill d-inline"><%= blog.blog_status %></p>
          </td>
          <td><%= blog.views_count %></td>
          <td><%= blog.created_at.strftime('%Y-%m-%d') %></td>
          <td class="">
            <%= link_to blog_path(blog) do  %>
                <i class="bi bi-eye-fill" style="font-size: 1.2rem"></i>           
            <% end %>
          <% if current_user.admin? %>
                <%= link_to 'Edit', edit_blog_path(id: blog.id), class: 'btn btn-link btn-sm btn-rounded' %>
                <%#= link_to 'Create', new_user_path, class: ' btn btn-link btn-sm btn-rouned' %>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteBlogModalLabel<%= blog.id %>" data-bs-target="#deleteBlogModal<%= blog.id %>">
                    Delete
                </button>
                <!-- Modal -->
              <div class="modal fade" id="deleteBlogModal<%= blog.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteBlogModalLabel<%= blog.id %>" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body text-center fw-semibold">
                        Are you sure you want to delete this blog ? 
                      </div>
                      <div class="modal-footer">
                        <%= button_to "Delete", blogs_path(blog), { class: 'btn btn-danger', method: :delete } %>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>
            <% else %>
                <%= link_to blog_path(blog) do  %>
                    <i class="bi bi-eye-fill h-3"></i>           
                <% end %>
          <% end %>

          </td>
        </tr>
      <% end %>
  </tbody>
</table>

