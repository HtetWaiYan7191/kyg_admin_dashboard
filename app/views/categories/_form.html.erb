<%= render 'layouts/auth_layout' do %>
    <% if category.persisted?%>
      <%= render 'shared/form_title', locals:{title: 'UPDATE CATEGORY' }%>
    <% else %>
        <%= render 'shared/form_title', locals:{title: 'CREATE CATEGORY' }%>
    <% end %>
  <div class="p-3">
      <%= form_with(model: category) do |form| %>
        <div> 
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="mt-3">
          <%= form.label :description, class: 'form-label' %>
          <%= form.text_field :description, class: 'form-control' %>
        </div>

        <div class="mt-3">
          <%= form.label :icon, class: 'form-label' %>
          <%= form.text_field :icon, class: 'form-control' %>
        </div>

      <div class="mt-3">
          <% unless category.persisted?%>
              <%= form.submit "Create", class: 'btn btn-primary w-100 text-center fw-semibold ' %>
          <% else %>
              <%= form.submit "Update", class: 'btn btn-primary w-100 text-center fw-semibold ' %>
          <% end %>      
      </div>
  <% end %>
  </div>
<% end %>

