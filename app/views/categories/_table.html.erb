<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% if locals[:categories].empty? %>
    <%= render 'shared/no_data_table' %>
  <% else %>
      <% locals[:categories].each do |category| %>
        <tr>
          <td class="">
              <div class="ms-3 d-flex align-items-center gap-3">
                <p class=" text-muted "><%= category.icon %></p>
                <p class="fw-bold "><%= category.name %> </p>
            </div>
          </td>
          <td>
            <p class="fw-normal mb-1 table-title text-truncate "><%= category.description %></p>
          </td>
          <td><%= format_date(category.created_at) %></td>
          <td><%= format_date(category.updated_at) %></td>

          <td class="">
            <%= link_to category_path(category) do  %>
                <i class="bi bi-eye-fill" style="font-size: 1.2rem"></i>           
            <% end %>
          <% if current_user.admin? %>
                <%= link_to 'Edit', edit_category_path(id: category.id), class: 'btn btn-link btn-sm btn-rounded' %>
                <%#= link_to 'Create', new_user_path, class: ' btn btn-link btn-sm btn-rouned' %>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deletecategoryModalLabel<%= category.id %>" data-bs-target="#deletecategoryModal<%= category.id %>">
                    Delete
                </button>
                <!-- Modal -->
              <div class="modal fade" id="deletecategoryModal<%= category.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deletecategoryModalLabel<%= category.id %>" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5>Delete <%= category.name %></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body text-center fw-semibold">
                        <%= render partial: 'shared/modal/modal_body', locals: {record: category.name}  %>
                      </div>
                      <div class="modal-footer">
                        <%= button_to "Delete", category_path(category), { class: 'btn btn-danger', method: :delete } %>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>
          <% end %>

          </td>
        </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
<%= render 'shared/paginate_footer', locals: {items: @categories} %>


