<%= render 'layouts/auth_layout' do %>
    <% if item.persisted?%>
      <%= render 'shared/form_title', locals:{title: 'UPDATE ITEM' }%>
    <% else %>
        <%= render 'shared/form_title', locals:{title: 'CREATE ITEM' }%>
    <% end %>
  <div class="p-3">
    <%= form_with(model: [@brand_partner, item]) do |form| %>
      <div class="mt-3">
        <%= render partial: 'shared/label_with_errors', locals: {form: form, field_name: :name, record: item} %>
        <%= form.text_field :name, class:'form-control' %>
      </div>

      <div class="mt-3">
        <%= render partial: 'shared/label_with_errors', locals: {form: form, field_name: :content, record: item} %>
        <%= form.text_area :content, class: 'form-control' %>
      </div>

      <div class="mt-3">
        <%= render partial: 'shared/label_with_errors', locals: {form: form, field_name: :price, record: item} %>
        <%= form.text_field :price, class: 'form-control' %>
      </div>

      <div class="mt-3">
        <%= render partial: 'shared/label_with_errors', locals: {form: form, field_name: :discount_percentage, record: item} %>
        <%= form.text_field :discount_percentage, class: 'form-control' %>
      </div>

      <div class="mt-3">
        <%= render partial: 'shared/label_with_errors', locals: {form: form, field_name: :brand_partner_id, record: item} %>
        <%= form.select :brand_partner_id, BrandPartner.order(:name).map { |brand_partner| [brand_partner.name, brand_partner.id]}, {prompt: "Select Category"}, {class: 'form-select'}  %>
      </div>

      <div class="mt-3">
        <%= render partial: 'shared/label_with_errors', locals: {form: form, field_name: :images, record: item} %>
        <%= form.file_field :images, multiple: true, class: 'form-control' %>
      </div>

      <div class="mt-3">
          <% unless item.persisted?%>
              <%= form.submit "Create", class: 'btn btn-primary w-100 text-center fw-semibold ' %>
          <% else %>
              <%= form.submit "Update", class: 'btn btn-primary w-100 text-center fw-semibold ' %>
          <% end %>      
      </div>
    <% end %>
  </div>
<% end %>


