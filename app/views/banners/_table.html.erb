<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>Caption</th>
      <th>Created At</th>
      <th>Updated At</th>
       <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% banners&.each do |banner| %>
        <tr>
            <td>
                <div class="d-flex align-items-center">
                    <% if banner.image.present? %>
                        <%= image_tag banner.image, alt: 'banner', width: 45, height: 45, class: 'rounded-circle'%>
                    <% end %>
                </div>
            </td>
            <td>
                <p class="fw-normal mb-1"><%= banner.caption %></p>
            </td>

            <td><%= banner.updated_at.strftime('%Y-%m-%d') %></td>
            <td><%= banner.updated_at.strftime('%Y-%m-%d') %></td>
            <td class="">
                <%= link_to banner_path(banner) do  %>
                    <i class="bi bi-eye-fill" style="font-size: 1.2rem"></i>           
                <% end %>
            <% if current_user.management? %>
                    <%= link_to 'Edit', edit_banner_path(id: banner.id), class: 'btn btn-link btn-sm btn-rounded' %>
                    <%#= link_to 'Create', new_user_path, class: ' btn btn-link btn-sm btn-rouned' %>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="bannerModelLabel<%= banner.id %>" data-bs-target="#bannerModel<%= banner.id %>">
                        Delete
                    </button>
                    <!-- Modal -->
                <div class="modal fade" id="bannerModel<%= banner.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="bannerModelLabel<%= banner.id %>" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5>Delete <%= banner.caption %></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center fw-semibold">
                          <%=  render partial: 'shared/modal/modal_body', locals: {record: banner.caption}%>
                        </div>
                        <div class="modal-footer">
                            <%= button_to "Delete", banner_path(banner), { class: 'btn btn-danger', method: :delete } %>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                        </div>
                    </div>
                </div>
            <% end %>

            </td>
        </tr>
  <% end %>

  </tbody>
</table>
<%= render 'shared/paginate_footer', locals: {items: banners} %>

