<%= render 'layouts/auth_layout' do %>
<% if banner.persisted? %>
  <%= render 'shared/form_title', locals: {title: 'Update Banner'}%>
<% else %>
  <%= render 'shared/form_title', locals: {title: 'Create Banner'}%>
<% end %>

  <div class="form-container">
  <%= form_with(model: banner) do |form| %>
  <div>
    <%= render partial: 'shared/label_with_errors', locals: {field_name: :caption, record: banner, form: form}%>
    <%= form.text_field :caption, class: 'form-control' %>
  </div>

  <div class="mt-3">
    <%= render partial: 'shared/label_with_errors', locals: {field_name: :image, record: banner, form: form}%>
      <% if banner.image.attached? %>
        <%= form.hidden_field :image, value: banner.image.signed_id %>
      <% end %>
      <%= form.file_field :image,  class: 'form-control' %>
  </div>


  <div class="mt-3">
    <% unless banner.persisted?%>
        <%= form.submit 'Create', class: 'btn btn-primary w-100 text-center fw-semibold ' %>
    <% else %>
        <%= form.submit 'Update', class: 'btn btn-primary w-100 text-center fw-semibold ' %>
    <% end %>
  </div>
<% end %>
  </div>
<% end %>


