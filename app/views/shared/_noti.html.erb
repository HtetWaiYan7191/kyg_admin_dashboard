<% if flash[:notice]%>
    <div 
        class="alert alert-success  transition transform duration-1000 position-absolute
         hidden"
        data-controller="notification"
        data-notification-delay-value="2000"
        data-transition-enter-from="opacity-0 translate-y-6"
        data-transition-enter-to="opacity-100 translate-y-0"
        data-transition-leave-from="opacity-100 translate-y-0"
        data-transition-leave-to="opacity-0 translate-y-6"
       
    >              
        <i class="bi bi-check-circle-fill me-1 text-light-green"></i>
        <strong class="text-black me-5"><%= flash[:notice] %></strong> 
    <button data-action="notification#hide" class="ms-auto">
        <i class="bi bi-x-circle border-none"></i>
    </button>
    </div>
<% end %>



<% if flash[:alert] %>
    <div 
        class="alert alert-danger  transition transform duration-1000 position-absolute
         hidden "
        data-controller="notification"
        data-notification-delay-value="2000"
        data-transition-enter-from="opacity-0 translate-y-6"
        data-transition-enter-to="opacity-100 translate-y-0"
        data-transition-leave-from="opacity-100 translate-y-0"
        data-transition-leave-to="opacity-0 translate-y-6"
       
    >               
        <i class="bi bi-check-circle-fill me-3 text-light-green"></i>
        <strong class="text-black"><%= flash[:alert] %></strong> 
    <button data-action="notification#hide" class="ms-auto">
        <i class="bi bi-x-circle border-none"></i>
    </button>
    </div>
<% end %>
